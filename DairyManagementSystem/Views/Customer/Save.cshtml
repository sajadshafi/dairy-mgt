@model DairyManagementSystem.Models.ViewModels.CustomerModel
@{
   ViewData["Title"] = "Save Customer";
}

<!-- Content Header (Page header) -->
<div class="content-header">
   <div class="container-fluid admin-breadcrumb px-3 py-2">
      <div class="row align-items-center">
         <div class="col-sm-6">
            <h3 class="m-0 breadcrumb-heading">Customers</h3>
         </div><!-- /.col -->
         <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
               <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
               <li class="breadcrumb-item"><a href="#">Customers</a></li>
               <li class="breadcrumb-item active">
                  @(Model == null && string.IsNullOrWhiteSpace(Model?.Name) ? "New" : Model.Name)
               </li>
            </ol>
         </div>

         <!-- /.col -->
      </div>

      <!-- /.row -->
   </div>

   <!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
   <div class="container-fluid">
      <div>
         <a asp-action="Index" class="btn btn-warning mb-3"><i class="fas fa-chevron-left mr-2"></i>Back</a>
      </div>

      <form asp-action="Save" method="post">
         <div class="form-group">
            <input asp-for="Name" placeholder="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
         </div>
         <div class="form-group">
            <input asp-for="Email" placeholder="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
         </div>
         <div class="form-group">
            <input asp-for="UserName" placeholder="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
         </div>
         <div class="form-group">
            <input asp-for="Address" placeholder="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
         </div>
         <div class="form-group">
            <input asp-for="Phone" placeholder="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
         </div>

         <button type="submit" class="btn btn-primary my-3 px-5">Save</button>
      </form>

   </div>
</section>

@section Scripts {
   @{
      await Html.RenderPartialAsync("~/Views/Shared/_ValidationScriptsPartial.cshtml");
   }
}