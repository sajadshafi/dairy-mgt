@model DairyManagementSystem.Models.ViewModels.CustomerModel

<!-- Content Header (Page header) -->
<div class="content-header">
   <div class="container-fluid admin-breadcrumb px-3 py-2">
      <div class="row align-items-center">
         <div class="col-sm-6">
            <h3 class="m-0 breadcrumb-heading">Customers</h3>
         </div><!-- /.col -->
         <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
               <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
               <li class="breadcrumb-item"><a href="#">Customers</a></li>
               <li class="breadcrumb-item active">@Model.Name</li>
            </ol>
         </div><!-- /.col -->
      </div><!-- /.row -->
   </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
   <div class="container-fluid">
      <p>
         <a asp-action="Index" class="btn btn-warning px-3"><i class="fas fa-chevron-left"></i> Back</a>
      </p>

      <h4>Customer Details</h4>
      <div>
         <h6>Name: @Model.Name</h6>
         <h6>Email: @Model.Email</h6>
         <h6>Phone: @Model.Phone</h6>
         <h6>Phone: @Model.UserName</h6>
         <h6>Address: @Model.Address</h6>
      </div>
   </div>
</section>
<!-- /.content -->
