@model DairyManagementSystem.Models.ViewModels.LoginDto

@{
    Layout = "_AuthLayout";
}

@{
    ViewData["Title"] = "Login";
}

<div class="login-box">
    <!-- /.login-logo -->
    <div class="card card-outline card-primary">
        <div class="card-header text-center">
            <p class="h1"><b>DMS</b> Admin</p>
        </div>
        <div class="card-body">
            <form asp-action="Login" method="post">
                @if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMessage))
                {
                    <p style="font-size:14px;" class="text-danger login-validation-error">@ViewBag.ErrorMessage</p>
                }
                <div class="input-group mb-3">
                    <input type="email" asp-for="Email" class="form-control" placeholder="Email">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="input-group mb-3">
                    <input type="password" asp-for="Password" class="form-control" placeholder="Password">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="toggle-password" style="cursor: pointer;"><i class="fas fa-eye"></i></span>
                        </div>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-8">
                        <div class="icheck-primary">
                            <input asp-for="RememberMe" type="checkbox" id="remember">
                            <label for="remember">
                                Remember Me
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>
            <!-- Add the "Forgot Password" link below the login form -->
            <div class="text-center mt-3">
                <a href="@Url.Action("ForgotPassword", "Auth")">Forgot Password?</a>
            </div>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>
<!-- /.login-box -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<script>
    // Add a click event handler to toggle the password visibility
    $(document).ready(function () {
        $('.toggle-password').click(function () {
            var passwordField = $(this).closest('.input-group').find('input[type="password"]');
            // Toggle the password field type between text and password
            passwordField.attr('type', passwordField.attr('type') === 'password' ? 'text' : 'password');
            // Toggle the eye icon
            $(this).find('i').toggleClass('fa-eye fa-eye-slash');
        });
    });
</script>
